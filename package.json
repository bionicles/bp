{
  "name": "bp",
  "version": "0.1.0",
  "private": false,
  "scripts": {
    "dev": "next",
    "build": "yarn prep && next build",
    "prep": "yarn && yarn lint && yarn audit && yarn test && yarn test:coverage -u && yarn upload:coverage",
    "start": "next start",
    "start-local": "docker-compose up",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage -u",
    "upload:coverage": "npx codecov --token=$CODECOV_TOKEN",
    "lint": "npx eslint .",
    "e2e": "source .env && codeceptjs run --config=tests/e2e/codecept.conf.js --steps",
    "e2ev": "yarn e2e --verbose",
    "tail-db-logs": "tail -f /usr/local/var/log/postgres.log",
    "lighthouse": "lhci autorun",
    "release": "npx semantic-release",
    "watch": "nodemon --ext '*' --exec 'yarn build || exit 1'",
    "clean-docker": "docker container stop $(docker container ls -aq) && docker container rm $(docker container ls -aq) && docker network prune",
    "run-db": "docker run postgres",
    "stop-db": "pg_ctl -D /usr/local/var/postgres stop",
    "connect-postgres": "psql -h $PGHOST -U $PGUSER -d postgres",
    "dump-schema": "pg_dump -s postgres -h $PGHOST -p 5432 -U $PGUSER -n public -f ./schema.sql",
    "tf-up": "cd _cloud/_terraform && terraform apply --auto-approve",
    "tf-down": "cd _cloud/_terraform && terraform destroy --auto-approve",
    "document-api": "node_modules/.bin/jsdoc -c jsdoc.conf.json -t node_modules/jsdoc-one-page pages/api/*.js pages/api/**/*.js -d public/docs"
  },
  "dependencies": {
    "@mdx-js/loader": "^1.5.7",
    "@next/mdx": "^9.5.5",
    "@sendgrid/mail": "^6.5.4",
    "ajv": "^6.12.0",
    "bcrypt": "^4.0.1",
    "captains-log": "^2.0.3",
    "cookie": "^0.4.0",
    "dayjs": "^1.8.21",
    "dotenv": "^8.2.0",
    "isomorphic-unfetch": "^3.0.0",
    "jsdoc-http-plugin": "^0.3.2",
    "jsonwebtoken": "^8.5.1",
    "next": "9.2.2",
    "pg": "^7.18.2",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "postgres-migrations": "^4.0.2",
    "react": "16.13.0",
    "react-dom": "16.13.0",
    "swr": "^0.1.18"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "@fullhuman/postcss-purgecss": "^2.1.0",
    "@semantic-release/git": "^9.0.0",
    "autoprefixer": "^9.7.4",
    "babel-loader": "^8.0.6",
    "babel-plugin-module-resolver": "^4.0.0",
    "better-docs": "^1.4.7",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "chai-json-schema-ajv": "^5.0.0",
    "codeceptjs": "^2.5.0",
    "codecov": "^3.6.5",
    "cssnano": "^4.1.10",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-plugin-chai-expect": "^2.1.0",
    "eslint-plugin-chai-friendly": "^0.5.0",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsdoc": "^22.0.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-ramda": "^2.5.1",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.5.0",
    "eslint-plugin-security": "^1.4.0",
    "jest": "^25.1.0",
    "jsdoc": "^3.6.3",
    "jsdoc-one-page": "^0.0.5",
    "jsdoc-to-markdown": "^5.0.3",
    "mailslurp-client": "^6.7.4",
    "prettier": "^1.19.1",
    "puppeteer": "^2.1.1",
    "purgecss": "^2.0.6",
    "react-test-renderer": "^16.13.0",
    "semantic-release": "^17.0.4",
    "source-map-explorer": "^2.3.1",
    "tailwindcss": "^1.2.0"
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      [
        "module-resolver",
        {
          "root": [
            "."
          ]
        }
      ]
    ]
  },
  "jest": {
    "coverageDirectory": "./tests/coverage/",
    "collectCoverage": true,
    "setupFiles": [
      "<rootDir>/tests/jest.setup.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/tests/e2e",
      "<rootDir>/.next/"
    ]
  },
  "eslintConfig": {
    "ignorePatterns": [
      "tests/__snapshots__/*",
      "tests/coverage/*",
      "node_modules",
      "tests/e2e",
      "out/*"
    ],
    "plugins": [
      "react",
      "security",
      "ramda",
      "jsdoc",
      "react-hooks",
      "node",
      "jest",
      "chai-expect",
      "chai-friendly"
    ],
    "rules": {
      "node/no-unpublished-import": "off",
      "node/no-missing-import": "off",
      "node/no-missing-require": "off",
      "node/no-unsupported-features/es-syntax": "off",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "react/react-in-jsx-scope": "off",
      "react/prop-types": "off",
      "jsdoc/require-param": "off",
      "jsdoc/require-example": "warn",
      "jsdoc/require-returns": "off",
      "jsdoc/check-param-names": "off",
      "jsdoc/check-property-names": "off",
      "jsdoc/require-jsdoc": [
        "warn",
        {
          "require": {
            "FunctionDeclaration": true,
            "MethodDefinition": true,
            "ClassDeclaration": true,
            "ArrowFunctionExpression": true,
            "FunctionExpression": true
          }
        }
      ],
      "jsdoc/check-tag-names": [
        "warn",
        {
          "definedTags": [
            "path",
            "header",
            "params",
            "auth",
            "query",
            "body",
            "response",
            "code"
          ]
        }
      ]
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:security/recommended",
      "plugin:ramda/recommended",
      "plugin:jsdoc/recommended",
      "plugin:node/recommended",
      "plugin:jest/recommended",
      "plugin:chai-expect/recommended",
      "plugin:chai-friendly/recommended"
    ],
    "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "jest": true
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    }
  },
  "nodemonConfig": {
    "watch": [
      "components",
      "pages",
      "tests/e2e/*_test.js",
      "tests/*.test.js",
      "Makefile",
      ".env"
    ]
  }
}
