{
  "name": "www",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next",
    "build": "next build",
    "prep": "yarn && yarn lint && yarn audit && yarn test && yarn test:coverage -u && yarn upload:coverage",
    "start": "next start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage -u",
    "upload:coverage": "npx codecov --token=$CODECOV_TOKEN",
    "lint": "npx eslint .",
    "e2e": "docker run -it --net=host -v $PWD/tests:/tests -e TEST_URL=$TEST_URL codeception/codeceptjs codeceptjs run --config=./e2e/codecept.conf.js --steps",
    "lighthouse": "lhci autorun",
    "release": "npx semantic-release",
    "watch": "nodemon --ext '*' --exec 'yarn build || exit 1'",
    "clean": "docker container stop $(docker container ls -aq) && docker container rm $(docker container ls -aq) && docker network prune",
    "connect-postgres": "psql -h $POSTGRES_HOST -U postgres -d postgres",
    "dump-schema": "pg_dump -s postgres -h $POSTGRES_HOST -p 5432 -U postgres -n public -f ./schema.sql",
    "deploy": "cd _cloud/_terraform && terraform apply --auto-approve",
    "document-api": "jsdoc2md --partial ./partials/link.hbs --template ./partials/README.hbs --files ./pages/api/**.js â€”param-list-format list >> README.md"
  },
  "dependencies": {
    "@mdx-js/loader": "^1.5.5",
    "@next/mdx": "^9.2.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "ajv": "^6.11.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "bcrypt": "^3.0.8",
    "cookie": "^0.4.0",
    "cssnano": "^4.1.10",
    "dotenv": "^8.2.0",
    "fs": "^0.0.1-security",
    "isomorphic-unfetch": "^3.0.0",
    "jsonwebtoken": "^8.5.1",
    "next": "9.2.1",
    "next-plugin-custom-babel-config": "^1.0.2",
    "next-plugin-transpile-modules": "^2.0.0",
    "pg": "^7.18.1",
    "puppeteer": "^2.1.1",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "semantic-release": "^17.0.2",
    "swr": "^0.1.16",
    "validator": "^12.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/node": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@fullhuman/postcss-purgecss": "^2.0.6",
    "autoprefixer": "^9.7.4",
    "babel-loader": "^8.0.6",
    "chai": "^4.2.0",
    "chai-json-schema-ajv": "^5.0.0",
    "codeceptjs": "^2.4.3",
    "codecov": "^3.6.5",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-plugin-chai-expect": "^2.1.0",
    "eslint-plugin-chai-friendly": "^0.5.0",
    "eslint-plugin-jest": "^23.7.0",
    "eslint-plugin-jsdoc": "^21.0.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-ramda": "^2.5.1",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.3.0",
    "eslint-plugin-security": "^1.4.0",
    "jest": "^25.1.0",
    "mailslurp-client": "^6.7.4",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0",
    "prettier": "^1.19.1",
    "purgecss": "^2.0.6",
    "react-test-renderer": "^16.12.0",
    "source-map-explorer": "^2.2.2",
    "tailwindcss": "^1.2.0"
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "jest": {
    "coverageDirectory": "./tests/coverage/",
    "collectCoverage": true,
    "setupFiles": [
      "<rootDir>/tests/jest.setup.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/tests/e2e",
      "<rootDir>/.next/"
    ]
  },
  "eslintConfig": {
    "ignorePatterns": [
      "tests/__snapshots__/*",
      "tests/coverage/*",
      "node_modules",
      "tests/e2e"
    ],
    "plugins": [
      "react",
      "security",
      "ramda",
      "jsdoc",
      "react-hooks",
      "node",
      "jest",
      "chai-expect",
      "chai-friendly"
    ],
    "rules": {
      "node/no-unpublished-import": "off",
      "node/no-missing-import": "off",
      "node/no-missing-require": "off",
      "node/no-unsupported-features/es-syntax": "off",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "react/react-in-jsx-scope": "off",
      "react/prop-types": "off",
      "jsdoc/require-example": "error",
      "jsdoc/require-jsdoc": [
        "error",
        {
          "require": {
            "FunctionDeclaration": true,
            "MethodDefinition": true,
            "ClassDeclaration": true,
            "ArrowFunctionExpression": true,
            "FunctionExpression": true
          }
        }
      ]
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:security/recommended",
      "plugin:ramda/recommended",
      "plugin:jsdoc/recommended",
      "plugin:node/recommended",
      "plugin:jest/recommended",
      "plugin:chai-expect/recommended",
      "plugin:chai-friendly/recommended"
    ],
    "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "jest": true
    },
    "settings": {
      "react": {
        "version": "detect"
      },
      "jsdoc": {
        "tagNamePreference": {
          "todo": {
            "message": "We expect immediate perfection, so don't leave to-dos in your code."
          }
        }
      }
    },
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    }
  },
  "nodemonConfig": {
    "watch": [
      "components",
      "pages",
      "tests/e2e/*_test.js",
      "tests/*.test.js",
      "Makefile",
      ".env"
    ]
  }
}
